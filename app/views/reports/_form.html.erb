<% form_for [@database, @report] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :query %><br />
    <%= f.text_area :query %>
  </p>
  <p>
    <%= f.submit "Save" %>
    <%= link_to "Cancel", @report %>
  </p>
<% end %>
